class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        List<Boolean> result = new ArrayList<Boolean>();
        int max = candies[0];
        int i = 0;
        while(i<candies.length){
            if(candies[i] > max){
                max = candies[i];
            }
            i++;
        }
        for(int j = 0; j< candies.length; j++){
            if(candies[j] + extraCandies >= max){
                result.add(true);
            }else{
            result.add(false); 
            }
        }
        return result;
    }
}
